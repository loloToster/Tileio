<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/dynamic-cells/mininote/main.css">
    <title>Document</title>
    <script defer src="/static/dynamic-cells/mininote/index.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <% allFonts.filter(f=> f.href).forEach(f=> { %>
        <link rel="stylesheet" href="<%- f.href %>">
        <% }) %>
</head>

<body style="--color: <%- color %>;">
    <div class="note-wrapper">
        <textarea style="--font: <%- font.css %>;" id="note" class="note" spellcheck="false"><%- text %></textarea>
        <div class="saving">Saving...</div>
    </div>
    <div class="settings">
        <button class="settings__close">
            <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20">
                <path
                    d="m6.062 15.375-1.437-1.437L8.562 10 4.625 6.062l1.437-1.437L10 8.562l3.938-3.937 1.437 1.437L11.438 10l3.937 3.938-1.437 1.437L10 11.438Z">
                </path>
            </svg>
        </button>
        <h3>Color</h3>
        <div class="settings__colors">
            <% allColors.forEach(c=> { %>
                <div class="settings__colors__color <%- c===color ? 'choosen' : '' %>" style="--color: <%- c %>;">
                    <% if (c===color) { %>
                        <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20">
                            <path d="m8.229 14.729-4.187-4.208 1.729-1.729 2.458 2.437 6-5.979L15.958 7Z" />
                        </svg>
                        <% } %>
                </div>
                <% }) %>
                    <% if (!allColors.includes(color)) { %>
                        <svg style="display: none;" xmlns="http://www.w3.org/2000/svg" height="20" width="20">
                            <path d="m8.229 14.729-4.187-4.208 1.729-1.729 2.458 2.437 6-5.979L15.958 7Z" />
                        </svg>
                        <% } %>
        </div>
        <h3>Font</h3>
        <div class="settings__fonts">
            <% allFonts.forEach(f=> { %>
                <div style="--font: <%- f.css %>;"
                    class="settings__fonts__font <%- f.slug === font.slug ? 'choosen' : ''%>" data-slug="<%- f.slug %>">
                    <%- f.name %>
                </div>
                <% }) %>
        </div>
    </div>
</body>

</html>
